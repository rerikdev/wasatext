# ---- Build stage ----
FROM golang:1.21-alpine AS builder
WORKDIR /app

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source
COPY cmd/ ./cmd/
COPY service/ ./service/

# Build static binary
RUN CGO_ENABLED=0 GOOS=linux go build -o wasatext-server ./cmd/webapi

# ---- Final stage ----
FROM alpine:latest
RUN apk --no-cache add ca-certificates
WORKDIR /app

# Copy binary from builder
COPY --from=builder /app/wasatext-server .

EXPOSE 3000
CMD ["./wasatext-server"]